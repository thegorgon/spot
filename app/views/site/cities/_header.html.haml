=content_for :toptitle do
  =@city.name.titlecase

=content_for :above do
  =render :partial => "/shared/membership/overlay", :locals => {:describe => true}
  
=content_for :bgimage do
  .stretcher{'data-gravity' => "0.5x0.5"}
    =image_tag "stretcher/cities/#{@city.slug}1.jpg", :size => "2292x1524"

.title.clearfix
  %h1.left.tf=title
  %ul.pillbox.right
    -@views.each_with_index do |view, i|
      %li.pill{:class => first_or_last(@views, i)}=link_to_with_current view, send("#{view}_city_path", @city), :current => @view == view