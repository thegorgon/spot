=content_for :bgimage do
  .stretcher{'data-gravity' => "0.5x0.5"}
    =image_tag "stretcher/cities/sf#{rand(4) + 1}.jpg", :size => "2292x1524"

=content_for :footer do
  %nav.icons.clearfix
    -if mobile_request?
      =img_link_to "assets/general/appstore140x40.png", getspot_path, :size => "140x40", :class => "getspot"
    -else
      =img_link_to "assets/general/appstore140x40.png", getspot_path, :size => "140x40", :class => "getspot"
      =img_link_to "assets/general/bizlink160x40.png", biz_root_path, :size => "160x40", :class => "bizlink"
  %nav.regular.clearfix
    -if mobile_browser? && !mobile_request?
      =link_to "mobile site", url_for(:mobile_site => 1)
    =link_to "press", press_path
    =link_to "twitter", "http://www.twitter.com/spotteam", :target => "_new"
    =link_to "blog", blog_index_path
    =link_to "about", about_path
    -if logged_in?
      =link_to current_user.nickname.downcase, account_path
    -else
      =link_to "sign in", new_session_path
  -if mobile_request?
    %nav.mobiletoggle=link_to "full site", url_for(:full_site => 1)


-if !mobile_request?
  #spotlogo.flips
  #slidetitle.tf
  
#toplayer.clearfix.tf
  .intro.scene
    .content.clearfix
      .describe.half
        For just
        ="#{content_tag(:em, "$#{Subscription.monthly.price} a month")},".html_safe
        Spot Members get
        %strong hundreds in savings
        at quality
        ="#{content_tag(:em, "local businesses")}.".html_safe
        
      .entrance.half{:class => "request"}
        -if current_user && city = current_user.city
          %h2.center.tf="Welcome Back #{current_user.first_name}"
          =button_to "Explore Your City", city_path(city), :class => "tf action"
        -elsif current_user
          %h2.center.tf="Welcome Back #{current_user.first_name}"
          =button_to "Select Your City", account_path, :class => "tf action", :id => "select_city_link"
        -else
          %h2.tf.registration Let's Get Started
                          
          =spot_form_for :email, :url => '#', :display => "faded clearfix", :ul_id => "email_form" do |f|
            =f.email_field :email, :placeholder => "enter your email", :value => invite_request.try(:email), :container_class => "left", :required => true
            =button_tag :class => "tf" do
              continue
                    
          =spot_form_for :credentials, :url => session_path, :ul_id => "member_form", :display => "faded clearfix" do |f|
            %h2.tf Member Login
            =f.hidden_field :key, :value => nonce.digested
            =f.fields_for :password do |p|
              =p.email_field :login, :placeholder => "email", "data-validate-url" => existence_email_path, :required => true
              =p.password_field :password, :placeholder => "password", :required => true, :minlength => 4, :maxlength => 25
            =f.error_messages
            %li.buttons.clearfix
              =button_tag :class => "tf btnorg100x32" do
                login
              =link_to "forgot password?", new_password_reset_path
            .memberswitch
              =link_to "I need to join", '#', :class => "tab", "data-class" => "request", :rel => "#request_tab"
          
          .memberswitch.registration
            =link_to "I'm already a member", new_session_path, :class => "tab", "data-class" => "member", :id => "member_tab"
          
  .map.scene
    .content
      %h1.tf Where Are You?
      -@cities.each_with_index do |city, i|
        %a.city{:href => city_path(city), :id => city.slug, :class => "#{first_or_last(@cities, i)} #{conditionally("subscribable", city.subscription_available?)}", 'data-id' => city.id}
          =city.name.titlecase
      -if mobile_request?
        %a.city.cantfind{:href => new_city_path} Other
      -else
        .cantfind
          Don't see your city on the map? 
          =link_to "Tell us where you live", new_city_path
          and we'll come to you next.
          
.hidden    
  =form_for invite_request || InviteRequest.new, :as => :request, :html => {:id => "invite_request_form"} do |f|
    =f.hidden_field :invite_code, :value => session_invite.try(:code)
    =f.hidden_field :email, :id => "invite_request_email"
    =f.hidden_field :city_id, :id => "invite_request_city_id"
  
  -if current_user
    =form_for :account, :url => account_path, :html => {:id => "account_update_form", :method => :put} do |f|
      =hidden_field_tag :redirect_to, root_url, :id => "account_redirect_to"
      =f.hidden_field :city_id
    