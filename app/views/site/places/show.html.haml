=content_for :hd do
  %h1#message="Remember places like this with #{link_to("Spot&nbsp;for&nbsp;iPhone".html_safe, getspot_path)}".html_safe
  #card_header
    #logo
      =image_tag "logos/spotwtagblk320x158.png", :size => "160x79", :alt => "spot"

.place{:id => "place_#{@place.id}"}
  .image.preload
    =image_tag @place.image.url(:i640x400), :size => "320x200", :alt => @place.name_with_city
  .content
    .contact
      %h1.name=@place.name
      -if @place.phone_number.present?
        .phone=phone_link(@place.phone_number)
      .address
        -@place.address_lines.each do |line|
          %h2=line
    .wishlists
      ="#{@place.wishlist_count} Wishlists"
    .buttons_container
      -if false && iphone_browser?
        =link_to "View in Spot", "spot-app://place?id=#{@place.id}", :class => "phone_whitegray_288x37"
      =link_to "Download Spot", getspot_path, :class => "phone_whitegray_288x37"
      =link_to "View Map", gmap_url(:name => @place.name, :ll => @place), :class => "phone_whitegray_288x37"
      .share.clearfix
        %a{:href => fb_share_url(place_url(@place), "#{@place.name} on Spot"), :class => "fb-share-button phone_whitegray_135x37 left"}
          .center
            =image_tag "assets/general/fb_f_24x22.png", :width => 24, :height => 22
            Share
        %a{:href => twitter_share_url(place_url(@place), @place.share_tweet), :class => "twit-share-btn phone_whitegray_135x37 right"}
          .center
            =image_tag "assets/general/tweetie30x22.png", :width => 30, :height => 22
            Tweet

.appstorelink.center
  =img_link_to 'assets/general/app_store_transparent116x40.png', getspot_path, :size => "116x40", :class => "getspot"
