.manager
  .top.clearfix
    .pagination
      -if @duplicates.next_page
        .next=link_to "Next &rarr;".html_safe, admin_duplicates_path(params.slice('status').merge(:page => @duplicates.next_page))
      -if @duplicates.previous_page
        .previous=link_to "&larr; Previous".html_safe, admin_duplicates_path(params.slice('status').merge(:page => @duplicates.previous_page))
    %h1.title="#{@duplicates.total_entries} Duplicate Places"
    .links
      =link_to "Unresolved", admin_duplicates_path
      =link_to "Ignored", admin_duplicates_path(:status => DuplicatePlace::IGNORED)
      =link_to "Resolved", admin_duplicates_path(:status => DuplicatePlace::RESOLVED)
      =link_to "Auto Resolved", admin_duplicates_path(:status => DuplicatePlace::AUTORESOLVED)
  =render :partial => "table", :object => @duplicates, :as => :places
  .pagination.bottom
    -if @duplicates.next_page
      .next=link_to "Next &rarr;".html_safe, admin_duplicates_path(params.slice('status').merge(:page => @duplicates.next_page))
    -if @duplicates.previous_page
      .previous=link_to "&larr; Previous".html_safe, admin_duplicates_path(params.slice('status').merge(:page => @duplicates.previous_page))
