-account = business.business_account || BusinessAccount.first
-place = business.place || Place.first
%tr.center.business{:id => dom_id(business)}
  %td= business.id
  %td= link_to place.name || "unknown", edit_admin_place_path(place)
  %td= "#{mail_to account.email_with_name, account.name} (#{account.title.titlecase})".html_safe
  %td= account.phone
  %td=link_to yes_no(business.verified?).titlecase, toggle_admin_business_path(business), "data-method" => "put", :class => "rowlink ajax"
  %td= business.created_at.strftime('%m-%d-%Y')
  %td
    -if business.verified?
      None
    -else
      =link_to "Delete", admin_business_path(business), "data-method" => "delete", :class => "rowlink ajax", "data-confirm" => "Are you sure? This will delete the business."
