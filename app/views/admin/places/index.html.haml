-filters = params.slice('filter')
.manager
  .top.clearfix
    .pagination
      -if @places.next_page
        .next=link_to "Next &rarr;".html_safe, admin_places_path(filters.merge(:page => @places.next_page)), :class => "page"
      -if @places.previous_page
        .previous=link_to "&larr; Previous".html_safe, admin_places_path(filters.merge(:page => @places.previous_page)), :class => "page"
    %h1.title="#{@places.total_entries} Places"
    .links
      =link_to "Image Queue", admin_places_path(filters.merge(:filter => 3))
      =link_to "Imageless", admin_places_path(filters.merge(:filter => 2))
      =link_to "Wishlisted", admin_places_path(filters.merge(:filter => 1))
      =link_to "Search", 'javascript:;', :class => "search_link"
      =link_to "All", admin_places_path
      =link_to "New", new_admin_place_path
    %ul#search_form_wrapper.form_wrapper.hidden
      =form_tag admin_places_path, :method => :get, :id => "search_form" do
        %li
          =label_tag :query, "Search For : "
          =text_field_tag :query
          =button_tag :class => "rndblk_80x26" do
            Search    
  =render :partial => "table", :object => @places, :as => :places
  .pagination.bottom
    -if @places.next_page
      .next=link_to "Next &rarr;".html_safe, admin_places_path(params.slice('filter').merge(:page => @places.next_page)), :class => "page"
    -if @places.previous_page
      .previous=link_to "&larr; Previous".html_safe, admin_places_path(params.slice('filter').merge(:page => @places.previous_page)), :class => "page"
