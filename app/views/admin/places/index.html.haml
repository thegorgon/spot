.manager
  .top.clearfix
    .pagination
      -if @places.next_page
        .next=link_to "Next &rarr;".html_safe, admin_places_path(:page => @places.next_page), :class => "page"
      -if @places.previous_page
        .previous=link_to "&larr; Previous".html_safe, admin_places_path(:page => @places.previous_page), :class => "page"
    %h1.title Places
    / .new
    /   =link_to "New", new_admin_place_path, :class => "page"
  %table.data
    %thead
      %tr
        %th Image
        %th Id
        %th Name
        %th Address
        %th Document
        %th Lat, Lng
        %th Actions
    %tbody
      -@places.each do |p|
        =render :partial => "place_row", :object => p, :as => :place
  .pagination.bottom
    -if @places.next_page
      .next=link_to "Next &rarr;".html_safe, admin_places_path(:page => @places.next_page), :class => "page"
    -if @places.previous_page
      .previous=link_to "&larr; Previous".html_safe, admin_places_path(:page => @places.previous_page), :class => "page"