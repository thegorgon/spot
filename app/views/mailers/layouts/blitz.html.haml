!!! 5
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %meta{'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
  %body{:style => "background:#ddd;"}
    =table_tag(:width => "100%", :bgcolor => "#ddd") do
      %tr
        %td{:colspan => 5, :height => 10}
      / %tr
      /   %td
      /   %td{:width => 15, :height => 14}=attached_img "topleft.png", :size => "15x14"
      /   %td{:height => 14}=attached_img "top.png", :height => "14", :style => "display:block;width:100%;"
      /   %td{:width => 15, :height => 14}=attached_img "topright.png", :size => "15x14"
      /   %td
      %tr
        %td{:colspan => 2}
        / %td{:width => 15}=attached_img "left.png", :width => "15", :style => "height:100%;"
        %td{:width => 600}
          =table_tag(:width => 600, :bgcolor => "white", :style => "margin:0 auto;") do
            %tr
              %td{:colspan => 3,:bgcolor => "black"}=attached_img "header.png", :size => "600x200", :alt => ""
            -if attachments["quote.png"].present?
              %tr
                %td{:height => 1, :bgcolor => "white",:colspan => 3}
              %tr
                %td{:bgcolor => "black",:colspan => 3}
                  =attached_img "quote.png", :size => "600x80", :alt => ""
            %tr
              %td{:colspan => 3, :height => 10}
            %tr
              %td{:width => 20}
              =table_cell do
                %div{:style => "height:100px;margin:10px 0 15px 0;"}
                  %div{:style => "float:left;height:100px;width:100px;margin-right:20px;"}
                    =attached_img "daynumber.png", :size => "100x100"  
                  %div{:style => "float:left;padding:15px 0 0 0;"}
                    =h1 "10 Reasons You'll Love Spot"
                    =h2 @reason
                =yield
                =h2 "Membership is limited to 10,000 - #{mlink_to "Join Now", @portal_url}".html_safe, :style => "text-align:center;margin:20px 0 0;"
                =hr
                =render :partial => "experiences"
              %td{:width => 20}
            %tr
              %td{:colspan => 3, :height => 20}
            %tr
              %td{:colspan => 3}
                =attach_link_to "footer.png", @portal_url, :size => "600x85", :alt => ""
        / %td{:width => 15}=attached_img "right.png", :width => "15", :size => "height:100%;"
        %td{:colspan => 2}
      / %tr
      /   %td
      /   %td{:width => 15, :height => 16}=attached_img "bottomleft.png", :size => "15x16"
      /   %td{:height => 16}=attached_img "bottom.png", :height => 16, :style => "width:100%;"
      /   %td{:width => 15, :height => 16}=attached_img "bottomright.png", :size => "15x16"
      /   %td
      %tr
        %td{:colspan => 5, :height => 10}
      %tr
        %td{:colspan => 2}
        %td
          =table_tag(:width => 600, :style => "margin: 0 auto;text-align:center;") do
            %tr
              =table_cell :style => "font-size: 11px;color:#808080;text-align:center;" do
                =line_tag do
                  You're receiving this email because you opted in at at our website, 
                  =mlink_to "spotmembers.com", "http://www.spotmembers.com"
                =line_tag do
                  Spot &middot; 2601 Mission St. &middot; San Francisco, California &middot; 
                  =mmail_to "feedback@spotmembers.com", "feedback@spotmembers.com"
                =line_tag do
                  To stop receiving these emails, 
                  =mlink_to "update your subscription preferences", email_url(:email => @email, :key => EmailSubscriptions.passkey(@email))
              %td{:width => 10}
        %td{:colspan => 2}
      %tr
        %td{:colspan => 5, :height => 10}
