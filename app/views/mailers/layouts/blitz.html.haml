!!! 5
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %meta{'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
  %body{:style => "background:#ddd;"}
    %table{:width => "100%", :bgcolor => "black", :cellpadding => 0, :cellspacing => 0}
      %tr
        %td
          %table{:width => 600, :bgcolor => "white", :style => "border-spacing:0;border-collapse:collapse;width:600px;margin:0 auto;font-family: 'Helvetica Neue', 'Helvetica', 'Lucida Grande', 'Arial', sans-serif; font-weight: 0; font-size:14px;color:#333;background:#fff;", :cellpadding => 0, :cellspacing => 0}
            %tr
              %td{:colspan => 3,:bgcolor => "black"}=image_tag attachments["header.png"].url, :size => "600x200", :alt => ""
            -if attachments["quote.png"].present?
              %tr
                %td{:height => 1, :bgcolor => "white",:colspan => 3}
              %tr
                %td{:bgcolor => "black",:colspan => 3}
                  =image_tag attachments["quote.png"].url, :size => "600x80", :alt => ""
            %tr
              %td{:colspan => 3, :height => 10}
            %tr
              %td{:width => 10}
              %td=yield
              %td{:width => 10}
        
            %tr
              %tr{:colspan => 3}
                =link_to image_tag(attachments["footer.png"].url, :size => "600x20", :alt => ""), root_url
      %tr
        %td{:height => 10}
      %tr
        %td
          %table{:width => 600, :cellpadding => 0, :cellspacing => 0, :style => "margin:0 auto;text-align:center;"}
            %tr
              %td{:style => "font-family: 'Helvetica Neue', 'Helvetica', 'Lucida Grande', 'Arial', sans-serif; font-weight: 0; font-size: 11px;color:#808080;text-align:center;"}
                %p{:style => "padding:0;margin:0;line-height:1.5em;"}
                  You're receiving this email because you opted in at at our website, 
                  =link_to "spotmembers.com", "http://www.spotmembers.com", :style => "color:#808080;"
                %p{:style => "padding:0;margin:0;line-height:1.5em;"}
                  Spot &middot; 2601 Mission St. &middot; San Francisco, California &middot; 
                  =mail_to "feedback@spotmembers.com", "feedback@spotmembers.com", :style => "color:#808080;"
                %p{:style => "padding:0;margin:0;line-height:1.5em;"}
                  To stop receiving these emails, 
                  =link_to "update your subscription preferences", email_url(:email => @email, :key => EmailSubscriptions.passkey(@email)), :style => "color:#808080;"
              %td{:width => 10}
      %tr
        %td{:height => 10}
