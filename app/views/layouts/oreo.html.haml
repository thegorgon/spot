-module_names << " oreo"

=content_for :header do
  =img_link_to "logos/spotwhite120x90.png", root_path, :size => "40x30"
  %nav.right.clearfix
    -if current_user
      =link_to current_user.nickname, account_path, :class => "accountlnk"
      %span.account="#{link_to "not you?", logout_path}".html_safe
    -else show_login?
      %span.account.accountlnk
        %a{'data-popover' => '#login_popover', 'data-popover-title' => 'Log In', 'data-popover-orient' => 'vertical'} 
          login
      =render :partial => "/shared/accounts/loginpopover", :locals => {:return_to => request.path}
    &middot;
    -if current_member? && current_user.invitation_code.invites_remaining?
      %a{'data-popover' => '#invite_popover', 'data-popover-title' => 'Invite', 'data-popover-orient' => 'vertical'} 
        invite
      &middot;
      #invite_popover
        -url = invitation_url(:ic => current_user.invitation_code.code)
        %h2.tf="#{current_user.invitation_code.invites_remaining} invites remaining."
        Share this link to invite worthy friends and family : 
        =sharing(url, "I've got 10 Spot invites to share. Foodies in SF, check it out now.", :link => true)
        
    =link_to "home", root_path
    =link_to "about", about_path
    =link_to "blog", blog_index_path
  
=content_for :content do
  .cookie
    =yield :above
    .filling
      .toptitle.clearfix
        %h1.tf.left=yield :toptitle
      .main
        =content_for?(:oreo) ? yield(:oreo) : yield
    .footer
      =image_tag "logos/spotwhite120x90.png", :size => "40x30", :class => "logo"
      &middot;
      2601 Mission St.
      San Francisco, CA 94110
      &middot;
      =mail_to "The Spot Team <contact@spot-app.com>", "Contact Us"
      &middot;
      =link_to "Privacy Policy", privacy_path
      &middot;
      =link_to "Terms of Service", tos_path
      &middot;
      =link_to "Press", press_path
      &middot;
      =link_to "Twitter", "http://www.twitter.com/spotteam", :target => "_new"
      

  -unless current_member?
    #applydialog.applydialog.clearfix.hidden{"data-title" => "Become a Founding Spot Member"}
      =render :partial => "/shared/membership/apply", :locals => {:referrer => session_invite}

= render :file => 'layouts/site'