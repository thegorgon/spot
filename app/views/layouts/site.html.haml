%head
  %meta{'charset' => 'utf-8'}
  %title= page_title
  %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
  %meta{'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
  = meta_tag("viewport", "width=device-width; initial-scale=1.0; maximum-scale=1.0;")
  = meta_tag("keywords", "spot, iphone, app, application, place, wishlist")
  = meta_tag("description", "Spot for iPhone lets you save and quickly recall friends' recommendations of places, like restaurants, bars, cafes, spas and other local shops.")
  = auto_discovery_link_tag(:rss, "http://spotteam.tumblr.com/rss")
  = favicon_link_tag("/favicon.ico")
  = open_graph_tags
  = include_stylesheets :site, :media => 'all'
  = csrf_meta_tag 
  = yield :head
  -if Rails.env.production?
    = google_analytics_tag(:account_id => 'UA-21193799-1')
%body{:id => page_namespace, :class => controller_name}
  #bg
  #page
    #hd
      = yield :hd
    #bd
      = flashes
      = yield
    #ft
      #logo.flips
        =image_tag 'logos/white_shadowed_spot_with_tagline_200x101.png', :width => '200'
      #nav.flips
        =link_to "press", press_path, :class => "page"      
        =link_to "twitter", "http://www.twitter.com/spotteam", :target => "_new"      
        =link_to "blog", blog_index_path, :class => "page"
        =link_to "about", about_path, :class => "page first"
        =link_to "home", root_path, :class => "page"      
        -if logged_in?
          #account_nav
            ="Logged in as #{current_user.nickname} #{link_to "logout", session_path, 'data-method' => "delete"}".html_safe
      -if itunes_store_link
        #itunes_store_link=itunes_store_link
      -else
        #signup_form.flips
          %p.title
            Coming Soon! Sign up for early access :
          =spot_form_for :preview, :url => previews_path, :html => {:class => "page"} do |f|
            =f.hidden_field :rid, :value => params[:rid]
            =f.text_field :email, "placeholder" => "enter your email address", "spellcheck" => "false", :type => "email", :class => "faded placeholder"
            =button_tag(:class => "hlfrndblk_80x30") do
              submit
    #fb-root
  :javascript
    if (! /MSIE (\d+\.\d+);/.test(navigator.userAgent)) {
      document.getElementById('ft').style.display = 'none';
      document.getElementById('bg').style.display = 'none';
    }
  =include_javascripts :vendor
  =include_javascripts :site
  :javascript
    Spot.init(#{js_vars});