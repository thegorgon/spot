%head
  %meta{'charset' => 'utf-8'}
  %title= page_title
  %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
  %meta{'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
  = iphone_meta_tags
  = seo_tags
  = auto_discovery_link_tag(:rss, "http://spotteam.tumblr.com/rss")
  = favicon_link_tag("/favicon.ico")
  = open_graph_tags
  = include_stylesheets :site, :media => 'all'
  = include_stylesheets :iphonesite, :media => 'only screen and (max-device-width: 480px)'
  = csrf_meta_tag 
  = yield :head
  -if Rails.env.production?
    = google_analytics_tag(:account_id => 'UA-21193799-1')
%body{:id => page_namespace, :class => controller_name}
  #bg
  #page
    = hide_content_tag    
    #hd= yield :hd
    #bd
      = flashes
      = yield
    #ft
      #logo.flips
        =image_tag 'logos/white_shadowed_spot_with_tagline_200x101.png', :size => '200x101'
      #nav.flips
        =link_to "press", press_path, :class => conditionally("page", request.ssl?)      
        =link_to "twitter", "http://www.twitter.com/spotteam", :target => "_new"      
        =link_to "blog", blog_index_path, :class => conditionally("page", request.ssl?)
        =link_to "about", about_path, :class => conditionally("page", request.ssl?)
        =link_to "home", :class => conditionally("page", request.ssl?)
        -if logged_in?
          #account_nav
            ="Logged in as #{current_user.nickname} #{link_to "logout", session_path, 'data-method' => "delete"}".html_safe
      =itunes_store_link("assets/general/app_store183x60.png", :size => "183x60") do
        #signup_form.flips
          %p.title
            Coming Soon! Sign up for early access :
          =spot_form_for :preview, :url => previews_path do |f|
            =f.hidden_field :rid, :value => params[:rid]
            =f.text_field :email, "placeholder" => "enter your email address", "spellcheck" => "false", :type => "email", :class => "faded placeholder"
            =button_tag(:class => "hlfrndblk_80x30") do
              submit
    #fb-root
  =include_javascripts :vendor
  =include_javascripts :site
  :javascript
    Spot.init(#{js_vars});