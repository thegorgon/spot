%head
  %meta{'charset' => 'utf-8'}
  %title= page_title
  %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
  %meta{'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
  = iphone_meta_tags
  = seo_tags
  = auto_discovery_link_tag(:rss, "http://spotteam.tumblr.com/rss")
  = favicon_link_tag("/favicon.ico")
  = open_graph_tags
  = include_stylesheets :site, :media => 'all'
  = include_stylesheets :iphonesite, :media => 'handheld, only screen and (max-device-width: 480px)'
  = csrf_meta_tag 
  = js_trigger_tag
  = yield :head
  -if Rails.env.production?
    = google_analytics_tag(:account_id => 'UA-21193799-1')
%body{:id => page_namespace, :class => "lightsite #{controller_name}"}
  #bg.preload_bg
    #middlebg
    =yield :bg
  = flashes
  #page
    #hd
      .clearfix
        #logo=image_tag "logos/spotwtagblk320x158.png", :size => "160x79", :alt => "spot"
        %ul#nav
          -if logged_in?
            %li
              hello
              =link_to current_user.nickname, account_path
              ="( #{link_to "not you?", login_path} )".html_safe
          -else
            %li=link_to "login?", new_session_path, {'data-popover' => '#login_popover', 'data-popover-title' => 'Log In', 'data-popover-orient' => 'vertical'}
            =render :partial => "/shared/accounts/loginpopover"
        = yield :hd
    #bd= yield
    #ft= yield :ft
    #fb-root
  =include_javascripts :vendor
  =include_javascripts :scripts
  :javascript
    Spot.init(#{js_vars});