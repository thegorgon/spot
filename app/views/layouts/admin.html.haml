=content_for :head do
  = include_stylesheets :admin, :media => 'all'

=content_for :libraries do 
  = google_maps_api_include

=content_for :header do
  #logo
    =image_tag "logos/spotadminwhite158x86.png", :height => "86", :alt => "spot"
  #place_search
    %ul.form.search.faded.accept_focus
      =form_tag admin_places_path, :method => :get, :autocomplete => "off" do
        %label{:for => "search_query_text"}
          %li.search_icon
          %li.search.accept_focus=text_field_tag :query, "", :id => "search_query_text"
  %nav
    %ul
      %li.first{'data-popover' => '#emulate_subnav', 'data-popover-orient' => 'vertical'}
        %span.title emulate
        %ul.hidden.subnav#emulate_subnav
          %li=link_to "Search", new_admin_search_path
          %li=link_to "Activity", admin_activity_items_path
      
      %li{'data-popover' => '#places_subnav', 'data-popover-orient' => 'vertical'}
        %span.title places
        %ul.hidden.subnav#places_subnav
          %li=link_to "All", admin_places_path
          %li=link_to "New", new_admin_place_path
          %li=link_to "Image Queue", admin_places_path(:filter => 3)
          %li=link_to "Imageless", admin_places_path(:filter => 2)
          %li=link_to "Wishlisted", admin_places_path(:filter => 1)
          %li=link_to "Dupes", admin_duplicates_path
          %li=link_to "Hydra", matches_admin_places_path
      %li{'data-popover' => '#users_subnav', 'data-popover-orient' => 'vertical'}
        %span.title members
        %ul.hidden.subnav#users_subnav
          %li=link_to "Invite Requests" , admin_invite_requests_path
          %li=link_to "Codes" , admin_membership_codes_path
      %li{'data-popover' => '#biz_subnav', 'data-popover-orient' => 'vertical'}
        %span.title biz
        %ul.hidden.subnav#biz_subnav
          %li=link_to "All Biz", admin_businesses_path
          %li=link_to "Pending Biz", admin_businesses_path(:filter => 1)
          %li=link_to "All Promotions", admin_promotions_path
          %li=link_to "Pending Promotions", admin_promotions_path(:filter => 1)
          %li=link_to "All Accounts", admin_business_accounts_path
          %li=link_to "Pending Accounts", admin_business_accounts_path(:filter => 1)
      %li{'data-popover' => '#acq_subnav', 'data-popover-orient' => 'vertical'}
        %span.title acquire
        %ul.hidden.subnav#acq_subnav
          %li=link_to "Sources", admin_acquisition_sources_path
          %li=link_to "Campaigns", admin_acquisition_campaigns_path
      %li{'data-popover' => '#tools_subnav', 'data-popover-orient' => 'vertical'}
        %span.title tools
        %ul.hidden.subnav#tools_subnav
          %li=link_to "Analysis", admin_analysis_path
          %li=link_to "Resque", admin_resque_path
          %li=link_to "Request Info", admin_info_path
          %li=link_to "Settings", admin_settings_path
                
= render :file => 'layouts/application'
