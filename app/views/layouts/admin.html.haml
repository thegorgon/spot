%head
  %meta{'charset' => 'utf-8'}
  %title= page_title
  %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
  %meta{'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
  = iphone_meta_tags
  = seo_tags
  = favicon_link_tag("/favicon.ico")
  = include_stylesheets :admin, :media => 'all'
  = csrf_meta_tag 
  = yield :head
%body{:id => page_namespace, :class => controller_name}
  #bg
  #page
    =hide_content_tag
    #hd
      #logo
        =image_tag "logos/white_admin_spot158x86.png", :height => "86", :alt => "spot"
      %ul#nav
        %li.first=link_to_with_current "search", new_admin_search_path, :class => "page"
        %li=link_to_with_current "places", admin_places_path, :class => "page"
        %li=link_to_with_current "dupes", admin_duplicates_path, :class => "page"
        %li=link_to_with_current "resque", admin_resque_path
        %li.last=link_to_with_current "info", admin_info_path, :class => "page"
    #bd.clearfix
      = yield
      -if flash[:error] || flash[:notice]
        #flash.hidden
          -[:error, :notice].each do |key|
            -if flash[key].present?
              %div{:class => key}= flash[key]
  #fb-root
  =google_maps_api_include
  =include_javascripts :vendor
  =include_javascripts :admin
  :javascript
    Spot.init(#{js_vars});