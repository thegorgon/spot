!!! 5
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %meta{'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
  %body
    %style{:type => "text/css"}
      a, a:visited { color:#333; text-decoration: underline; } a:hover { color: #ff8419; }
      p{padding:0px;margin:15px 0;}
    %table{:width => 600, :style => "border-spacing:0;border-collapse:collapse;width:600px;margin:0 auto;font-family: 'Helvetica Neue', 'Helvetica', 'Lucida Grande', 'Arial', sans-serif;font-size:14px;color:#333;", :cellpadding => 0, :cellspacing => 0}
      %tr
        %td
          %table{:width => 598, :bgcolor => "#f7f7f7", :style => "border-spacing:0;border-collapse:collapse;border: 1px solid #999;padding:0;margin:0;background:#f7f7f7 url(#{IMGHOST}backgrounds/emailhd598x150.jpg?1) no-repeat no-repeat top left;", :cellpadding => 0, :cellspacing => 0}
            %tr
              %td{:colspan => 5,:height => 10}
            %tr
              %td{:width => 10}
              %td{:width => 80, :valign => "top"}=image_tag(attachments["logo.png"].url, :size => "80x140", :alt => "")
              %td{:width => 20}
              %td{:width => 470}
                %table{:width => 470, :cellpadding => 0, :cellspacing => 0}
                  -if @title.present?
                    %tr
                      %td{:valign => "bottom", :style => "font-size: 20px;font-weight:bold;", :height => 80}=@title
                    %tr
                      %td{:height => 10}
                  -else
                    %tr
                      %td{:height => 70}
                  %tr
                    %td=yield
              %td{:width => 20}
            %tr
              %td{:colspan => 5, :height => 30}
            %tr{:style =>"padding:0;margin:0;line-height:0px;"}
              %td{:colspan => 5, :style => "padding:0;margin:0;"}
                =image_tag(attachments["footer.jpg"].url, :size => "598x110", :alt => "spot")
      %tr
        %td{:height => 5}
      %tr
        %td{:style => "text-align: center;font-size:10px;line-height:12px;color:#333;"}
          Spot 路 2601 Mission Street, Suite 403 路 San Francisco, CA 路
          =link_to root_url, HOSTS[Rails.env], :style => "color:#333;"
          路
          =mail_to "feedback@spotmembers.com", "feedback@spotmembers.com", :style => "color:#333;"
      -if @email
        %tr{:style => "line-height:12px;"}
          %td{:style => "text-align:center;font-size:10px;line-height:12px;color:#333;"}
            To unsubscribe from further emails,
            =link_to "click here", email_url(:email => @email, :key => EmailSubscriptions.passkey(@email)), :style => "color:#333;"
      %tr
        %td=yield :ft