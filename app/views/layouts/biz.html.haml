%head
  %meta{'charset' => 'utf-8'}
  %title= page_title
  %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
  %meta{'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
  = meta_tag("viewport", "width=device-width; initial-scale=1.0; maximum-scale=1.0;")
  = meta_tag("keywords", "spot, iphone, app, application, place, wishlist")
  = meta_tag("description", "Spot for iPhone lets you save and quickly recall friends' recommendations of places, like restaurants, bars, cafes, spas and other local shops.")
  = favicon_link_tag("/favicon.ico")
  = open_graph_tags
  = include_stylesheets :biz, :media => 'all'
  = csrf_meta_tag 
  = yield :head
%body{:id => page_namespace, :class => controller_name}
  #bg
  #page
    #hd
      #logo
        =image_tag "logos/white_biz_spot158x86.png", :height => "86", :alt => "spot"
      %ul#nav
        -if biz_account
          %li.first=link_to_with_current "Account", biz_account_path, :class => "page"
        -else
          %li.first=link_to_with_current "Sign Up", new_biz_account_path, :class => "page"        
        %li.last=link_to_with_current "Help", biz_help_path, :class => "page"
    #bd.clearfix
      = yield
      -if flash[:error] || flash[:notice]
        #flash.hidden
          -[:error, :notice].each do |key|
            -if flash[key].present?
              %div{:class => key}= flash[key]
  #fb-root
  :javascript
    if (! /MSIE (\d+\.\d+);/.test(navigator.userAgent)) {
      document.getElementById('hd').style.display = 'none';
      document.getElementById('bg').style.display = 'none';
    }  
  =google_maps_api_include
  =include_javascripts :vendor
  =include_javascripts :biz
  :javascript
    Spot.init(#{js_vars});