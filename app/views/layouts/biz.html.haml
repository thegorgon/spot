%head
  %meta{'charset' => 'utf-8'}
  %title= page_title
  %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
  %meta{'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
  = iphone_meta_tags
  = seo_tags
  = favicon_link_tag("/favicon.ico")
  = open_graph_tags
  = include_stylesheets :biz, :media => 'all'
  = csrf_meta_tag 
  = js_trigger_tag
  = yield :head
  -if Rails.env.production?
    = google_analytics_tag(:account_id => 'UA-21193799-1')
%body{:id => page_namespace, :class => "#{controller_name} biz"}
  #bg.preload_bg
  =flashes
  #page
    #hd
      #logo
        =image_tag "logos/white_biz_spot158x86.png", :height => "86", :alt => "spot"
      %ul#nav
        -if current_account
          %li=link_to_with_current "Account", biz_account_path
          %li{'data-popover' => '#business_list', 'data-popover-title' => 'My Businesses', 'data-popover-orient' => 'vertical'}
            Businesses
            %ul#business_list.bizlist.hidden.placelist.large
              =render :partial => "/biz/businesses/list"
              %li.new.clearfix
                %a{:href => new_biz_business_path}
                  %span.big + 
                  Claim Another Business
        -else
          %li=link_to_with_current "Sign Up", new_biz_account_path        
          -unless logged_in?
            %li{'data-popover' => '#login_popover', 'data-popover-title' => 'Log In', 'data-popover-orient' => 'vertical'} 
              Log In
              =spot_form_for :credentials, :url => session_path, :ul_id => "login_popover", :display => "hidden inpopover" do |f|
                =hidden_field_tag :return_to, biz_account_path
                =f.hidden_field :key, :value => nonce.digested
                =f.fields_for :password do |p|
                  =p.email_field :login, :placeholder => "email", "data-validate-url" => existence_email_path, :required => true
                  =p.password_field :password, :placeholder => "password", :required => true
                %li.buttons.clearfix
                  =button_tag :class => "blackimg_77x32" do
                    login
                  =link_to "forgot password", new_password_reset_path, :class => "forgot"
        %li{'data-popover' => '#help_topics', 'data-popover-orient' => 'vertical'} 
          Help
          %ul#help_topics.subnav.hidden
            %li=link_to "FAQ", biz_faq_path
            %li=link_to "Terms of Service", biz_tos_path
            -if current_account
              %li=link_to "Spot Widgets", biz_widgets_path
            %li=link_to "Contact Us", new_biz_contact_path
              
    #bd.clearfix
      = yield
  #fb-root
  =google_maps_api_include
  =include_javascripts :vendor
  =include_javascripts :scripts
  :javascript
    Spot.init(#{js_vars});